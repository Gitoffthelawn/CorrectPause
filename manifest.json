{
    "manifest_version": 2,
    "name": "Correct Pause",
    "version": "1.1",

    "permissions": [
      "<all_urls>"
    ],

    "description": "Browser extension to fix YouTube pause function",
  
    "icons": {
      "48": "icons/correctPause-48.png"
    },
  
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["correctPause.js"]
      }
    ],

    "browser_specific_settings": {
      "gecko": {
        "id": "correctPause@justempire.net",
        "strict_min_version": "42.0"
      }
    }
  }
  